<h1>Category: <%= @category.name %></h1>

<div class="post-list">
  <% @posts.each do |post| %>
    <article>
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p class="post-meta"><%= post.published_at.strftime("%B %d, %Y") %></p>
      <p><%= truncate(post.body, length: 200) %></p>
    </article>
  <% end %>
</div>

<p><%= link_to "&larr; All categories".html_safe, categories_path %></p>
